<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">Edit Item</li>
  </ol>
</nav>

{{#if alert}}
<div class="alert alert-success alert-dismissible fade show" role="alert" ng-show="show_alert">
  {{alert}}   
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

</div>

{{/if}}

{{#each rows}}
<form class="row g-3 needs-validation" method="POST" action="/edititem/{{this.item_id}}" novalidate>

   <div class="col-6">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="floatingInput" value="{{this.item_name}}" placeholder="Item Name" name="item_name">
            <label for="floatingInput">Item Name</label>
        </div>
    </div>

    <div class="col-md">
    <div class="form-floating">
      <select class="form-select" id="floatingSelectGrid" value="{{this.item_category}}" name="item_category">
        <option selected>Item Category</option>
        <option value="Laptop">Laptop</option>
        <option value="Keyboard">Keyboard</option>
        <option value="Mouse">Mouse</option>
        <option value="CCTV Camera">CCTV Camera</option>
        <option value="DVR">DVR</option>
        <option value="etwork Devices">Network Devices</option>
        <option value="Printer">Printer</option>
        <option value="Laptop Parts">Laptop Parts</option>
        <option value="Computer Parts">Computer Parts</option>
        <option value="Others">Others</option>
      </select>
    </div>
  </div>

    <div class="col-6">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="floatingInput" value="{{this.supplier}}" placeholder="Supplier" name="supplier">
            <label for="floatingInput">Supplier</label>
        </div>
    </div>
    <div class="col-6">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="floatingInput" value="{{this.price}}" placeholder="Price" name="price">
            <label for="floatingInput">Price</label>
        </div>
    </div>
    <div class="col-6">
        <div class="form-floating mb-3">
            <input type="date" class="form-control" id="floatingInput" value="{{this.date}}" placeholder="Date" name="date">
            <label for="floatingInput">Date</label>
        </div>
    </div>
     <div class="col-12">
        <div class="form-floating mb-3">
            <textarea name="description" placeholder= "Description of the Product" class="form-control" id="description" style="height:200px">
                {{this.description}}
            </textarea>
            <label for="description">Description</label>
        </div>
    </div>
    <div class="col-12 d-grid">
        <button class="btn btn-primary" type="submit">Submit</button>
    </div>
{{/each}}
</form>